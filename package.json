{
  "name": "hubot-ibmcloud-logger",
  "version": "0.0.19",
  "description": "Logging utility for IBM Cloud hubot scripts",
  "main": "index.js",
  "respository": {
    "url": "https://github.com/ibm-cloud-solutions/hubot-ibmcloud-logger",
    "type": "git"
  },
  "scripts": {
    "lint": "eslint src/**/*.js test/*.js index.js",
    "test": "export HUBOT_LOG_LEVEL=debug && mocha test",
    "coverage": "istanbul cover -x index.js -x '**/coverage/**' -x '**/tools/**' --include-all-sources --report lcov --report cobertura --report text --dir ./gh-pages/coverage _mocha -- test",
    "release": "node tools/publish"
  },
  "keywords": [
    "hubot",
    "hubot-scripts",
    "bluemix",
    "cloud"
  ],
  "author": "ibm-cloud-solutions",
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^3.5.0",
    "coffee-script": "^1.10.0",
    "eslint": "^2.9.0",
    "eslint-config-strongloop": "^2.0.1",
    "hubot": "^2.19.0",
    "hubot-help": "^0.2.0",
    "hubot-test-helper": "^1.4.4",
    "istanbul": "0.4.0",
    "istanbul-cobertura-badger": "1.2.1",
    "mocha": "^2.4.5",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  },
  "peerDependencies": {
    "hubot": "^2.19.0"
  },
  "engines": {
    "node": ">= 4.2.0"
  },
  "files": [
    "index.js",
    "src"
  ],
  "dependencies": {
    "lodash": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
